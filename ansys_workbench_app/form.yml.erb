<%
app_name = "ANSYS Workbench"
mod_name = "ansys"
template_root = "/var/www/ood/apps/templates/"
#modulecmd = template_root + 'getmodules.sh' + " " + mod_name
#modules = %x[ #{modulecmd}]
modules = File.read(template_root+mod_name+".txt")
%>
---
title: <%= app_name %>
attributes:
  version:
    widget: select
    label: <%= app_name %> version
    help: "This defines the version of <%= app_name %> you want to load."
    options:
      <% modules.lines.reverse.each do |line| %>
      <% unless line.to_s.strip == "" %>
      - [ "<%= line.split('/')[1] %>", "<%= line %>" ]
      <% end %>    
      <% end %>    
  cluster:
    widget: select
    options:
      <%- CustomQueues.clusters.each do |g| %>
      - "<%= g %>"
      <%- end %>
<% IO.foreach(template_root+"friscos_v2") do |line| %>
<%= line %>
<% end %>    
<% IO.foreach(template_root+"cluster-help") do |line| %>
<%= line %>
<% end %>    
  custom_accpart:
    widget: select
    options:
      <%- CustomAccPart.accpart.each do |g| %>
      - "<%= g %>"
      <%- end %>
<% IO.foreach(template_root+"accpart-help") do |line| %>
<%= line %>
<% end %>    

<% IO.foreach(template_root+"job_params_v3") do |line| %>
<%= line %>
<% end %>    

  num_nodes:
    widget: number_field
    label: "Number of nodes"
    min: 1
    step: 1
    value: 1
    help: "Number of nodes to distribute the tasks over, leave at 1 to use a single node. Only CFX currently supports multiple nodes."

form:
  - version
  - cluster
  - custom_accpart
  - num_cores
  - num_nodes
  - bc_num_hours
  - memtask
  - gpu_type
  - gpu_count
  - bc_vnc_resolution
  - bc_email_on_started
